<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/contact_page_pic"
    tools:context=".ContactUs">

    <TextView
        android:id="@+id/textContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#CC03A9F4"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="Contact Us" />

    <TextView
        android:id="@+id/textEmailContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textContact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#CCFA367D"
        android:textColor="#FFFFFF"
        android:text="Email: contact@hometohome.com"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textPhoneConact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEmailContact"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#CCFA367D"
        android:textColor="#FFFFFF"
        android:text="Phone: 044 45638967"
        android:textStyle="bold"
        android:textSize="20dp" />

    <Button
        android:id="@+id/contactReturnButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textPhoneConact"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#CC03A9F4"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="Return" />
</RelativeLayout>