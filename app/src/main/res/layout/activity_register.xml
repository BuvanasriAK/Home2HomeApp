<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/individual_register_page_pic"
    tools:context=".Register">


    <TextView
        android:id="@+id/signupText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/regName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signupText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="First and Last Name"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/regUsername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Username"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/regPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Password"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:password="true"/>

    <EditText
        android:id="@+id/regConfPassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Confirm Password"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:password="true"/>

    <EditText
        android:id="@+id/regEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regConfPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Email ID"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/regContact"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Contact Number"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/regPinCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="#FFFFFF"
        android:hint="Pin Code"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regPinCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#BFB4FB8B"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/textSignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Already have an account? Login"
        android:textColor="#000000"
        android:textSize="15dp" />
</RelativeLayout>

