<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manager_login_page_pic"
    tools:context=".ManagerLogin">

    <Button
        android:id="@+id/adminlogin"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#B3FFFFFF"
        android:text="Login" />

    <EditText
        android:id="@+id/adminpassword"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminusername"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        android:hint="Password"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:password="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/adminusername"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminText"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        android:hint="Username"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/adminText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="30dp"
        android:textStyle="bold"/>

</RelativeLayout>