<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/member_page_two_pic"
    tools:context=".BecomeAMember2">

    <TextView
        android:id="@+id/memberText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#B2683AB7"
        android:text="Congratulations!\nYou are now a part of our family.\nYou will be receiving photos of our kids every month to your email.\nThank you!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/memberReturnButtton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/memberText4"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#A5000000"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="Return" />
</RelativeLayout>