<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/donate_page_one_pic"
    tools:context=".MakeADonation">

    <TextView
        android:id="@+id/donateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="330dp"
        android:layout_marginLeft="10dp"

        android:text="Donate"
        android:background="#A5000000"
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="40dp" />
    <TextView
        android:id="@+id/donateText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donateText"
        android:layout_marginTop="10dp"

        android:layout_marginLeft="10dp"
        android:background="#A5000000"
        android:text="Make a difference, right now."
        android:textAlignment="viewEnd"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/donateNextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donateText2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="300dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#A5000000"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:text="Next" />
</RelativeLayout>